ALGORITHM read_a_sentence
VAR
    count1,count2,count3 : INTEGER:=0;
    car : CHAR;
BEGIN
  REPEAT
    read(car);
    IF (car ="a" or car="e" or car="i" or car="o" or car="u" or car="y") THEN
        count3:=count3+1;
    END_IF
    IF (car=" ") THEN
      count2:=count2+1;
    END_IF
    count1:=count1+1;
  UNTIL (car=".") ;
END